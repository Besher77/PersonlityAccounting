<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPersonalAccounting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <item name="bt_colorActive">@color/active2</item>
        <item name="bt_colorInactive">@color/unactive2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyPersonalAccounting2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/btn3</item>
        <item name="colorPrimaryVariant">@color/active2</item>
        <item name="colorOnPrimary">@color/active2</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/them2</item>
        <item name="colorSecondaryVariant">@color/them2</item>
        <item name="colorOnSecondary">@color/them2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationView.">
        <item name="bt_active">true</item>
        <item name="colorPrimary">@color/unselect3</item>
        <item name="colorAccent">@color/select3</item>
    </style>

    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/R</item>
    </style>

    <style name="Custom_MaterialCalendar.Fullscreen" parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">false</item>

    </style>

    <style name="BottomNavigationView">
        <item name="background">@color/purple_200</item>
        <item name="backgroundTint">@color/purple_200</item>
        <item name="cardCornerRadius">10dip</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="selectableItemBackground">@color/black</item>
        <item name="android:radius">10dp</item>
        <item name="trackColor">@color/purple_500</item>
    </style>

    <style name="Theme.MyPersonalAccountingDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyPersonalAccounting2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyPersonalAccounting2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyPersonalAccounting2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>